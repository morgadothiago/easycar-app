{
  "expo": {
    "name": "EasyCar",
    "slug": "easycar-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": {
      "dark": "./assets/icon-dark.png",
      "light": "./assets/icon-light.png",
      "tinted": "./assets/icon-tinted.png"
    },
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f7d600"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.easycar.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "edgetoEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "monochromeImage": "./assets/adaptive-icon.png",
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.thiago_morgado.easycarapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que o $(PRODUCT_NAME) use sua localização sempre e enquanto estiver em uso."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "461eb735-6806-479a-9861-87a81e8b5adf"
      }
    }
  }
}